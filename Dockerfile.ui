# Use an official Python runtime as a parent image
FROM python:3.9-slim

# Set build-time arguments
ARG TAG

# Set the working directory
WORKDIR /app

RUN apt-get update && apt-get install -y curl unzip && rm -rf /var/lib/apt/lists/* \
    && curl -L -o repo.zip https://api.github.com/repos/${GITHUB_REPOSITORY}/zipball/${TAG} \
    && echo $(sha256sum repo.zip) \
    && unzip repo.zip \
    && mv $(ls -d */ | head -n 1)/* . \
    && rm -rf repo.zip $(ls -d */ | head -n 1) 

# Install any needed packages specified in requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Expose port 8501 for the Streamlit UI
EXPOSE 8501

# Run Streamlit app
CMD ["streamlit", "run", "ui.py", "--server.port=8501", "--server.enableCORS=false"]
